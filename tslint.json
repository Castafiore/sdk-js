{
  "extends": "tslint:recommended",
  "rules": {
    "no-empty-interface": false,
    "quotemark": [true, "double"],
    "object-literal-key-quotes": [true, "as-needed"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "max-line-length": [
      true,
      {
        "limit": 120
      }
    ]
  },
  "linterOptions": {
    "exclude": ["test/**"]
  }
}
